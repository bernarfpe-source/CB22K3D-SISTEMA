<script>
    let DADOS_ULTIMO_CALCULO = null;

    function EFETUAR_CALCULO() {
        const NOME = document.getElementById('NOME_PECA').value;
        const PESO = parseFloat(document.getElementById('PESO').value) || 0;
        const PRECO_FIL = parseFloat(document.getElementById('PRECO_FILAMENTO').value) || 0;
        const TEMPO = parseFloat(document.getElementById('TEMPO').value) || 0;
        const CONSUMO = parseFloat(document.getElementById('CONSUMO').value) || 0;
        const KWH = parseFloat(document.getElementById('KWH').value) || 0;
        const HORA_MAQ = parseFloat(document.getElementById('HORA_MAQ').value) || 0;
        const MARGEM = parseFloat(document.getElementById('MARGEM').value) || 0;

        // LÓGICA DE CÁLCULO
        const CUSTO_MAT = (PESO / 1000) * PRECO_FIL;
        const CUSTO_ENG = (CONSUMO / 1000) * TEMPO * KWH;
        const CUSTO_OP = TEMPO * HORA_MAQ;
        const CUSTO_TOTAL = CUSTO_MAT + CUSTO_ENG + CUSTO_OP;
        const PRECO_FINAL = CUSTO_TOTAL + (CUSTO_TOTAL * MARGEM / 100);

        DADOS_ULTIMO_CALCULO = {
            NOME: NOME || "PEÇA SEM NOME",
            VALOR: PRECO_FINAL.toFixed(2)
        };

        document.getElementById('AREA_RESULTADO').innerText = `PREÇO SUGERIDO: R$ ${DADOS_ULTIMO_CALCULO.VALOR}`;
    }

    function TRANSFERIR_PARA_ORCAMENTO() {
        if (!DADOS_ULTIMO_CALCULO) {
            alert("PRIMEIRO CLIQUE EM CALCULAR!");
            return;
        }

        const TABELA = document.getElementById('CORPO_TABELA');
        const LINHA = TABELA.insertRow();

        LINHA.innerHTML = `
            <td>${DADOS_ULTIMO_CALCULO.NOME.toUpperCase()}</td>
            <td>R$ ${DADOS_ULTIMO_CALCULO.VALOR}</td>
            <td><button class="BTN-EXCLUIR" onclick="REMOVER_LINHA(this)">EXCLUIR</button></td>
        `;

        // RESET PARA PRÓXIMO ITEM
        DADOS_ULTIMO_CALCULO = null;
        document.getElementById('NOME_PECA').value = "";
        document.getElementById('PESO').value = "0";
        document.getElementById('TEMPO').value = "0";
    }

    function REMOVER_LINHA(botao) {
        const LINHA = botao.parentNode.parentNode;
        LINHA.parentNode.removeChild(LINHA);
    }
</script>

