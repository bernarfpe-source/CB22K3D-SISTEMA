                </tr>
            </thead>
            <tbody id="CORPO_TABELA">
                </tbody>
        </table>
    </div>

    <div class="CARD">
        <div class="GRID-5">
            <div class="GRUPO-INPUT"><label>IMP %</label><input type="number" id="TAXA_IMP" value="6" oninput="CALCULAR_TUDO()"></div>
            <div class="GRUPO-INPUT"><label>MKT %</label><input type="number" id="TAXA_MKT" value="0" oninput="CALCULAR_TUDO()"></div>
            <div class="GRUPO-INPUT"><label>EMBALAGEM</label><input type="number" id="VAL_EMB" value="5" oninput="CALCULAR_TUDO()"></div>
            <div class="GRUPO-INPUT"><label>FRETE</label><input type="number" id="VAL_FRETE" value="0" oninput="CALCULAR_TUDO()"></div>
            <div class="GRUPO-INPUT"><label>MARGEM %</label><input type="number" id="TAXA_MARGEM" value="100" oninput="CALCULAR_TUDO()"></div>
        </div>

        <div class="CARD-TOTAL">
            <p style="margin: 0; font-size: 12px; color: #64748B;">VALOR TOTAL DO ORÇAMENTO</p>
            <h1 id="VALOR_FINAL">R$ 0,00</h1>
        </div>
    </div>
</div>

<script>
    let LISTA_PRODUTOS = [];

    function ADICIONAR_AO_LISTADO() {
        const NOME = document.getElementById('PRODUTO_NOME').value;
        const CUSTO = parseFloat(document.getElementById('PRODUTO_CUSTO').value) || 0;

        if (NOME === "") return alert("DIGITE O NOME DA PEÇA");

        LISTA_PRODUTOS.push({ nome: NOME, custo: CUSTO });
        
        document.getElementById('PRODUTO_NOME').value = "";
        document.getElementById('PRODUTO_CUSTO').value = "0";

        ATUALIZAR_TABELA();
        CALCULAR_TUDO();
    }

    function ATUALIZAR_TABELA() {
        const CORPO = document.getElementById('CORPO_TABELA');
        CORPO.innerHTML = "";

        LISTA_PRODUTOS.forEach((item, index) => {
            const LINHA = CORPO.insertRow();
            LINHA.innerHTML = `
                <td>${item.nome}</td>
                <td>FILAMENTO 3D</td>
                <td>R$ ${item.custo.toFixed(2)}</td>
                <td><button class="BTN-REMOVER" onclick="REMOVER(${index})">REMOVER</button></td>
            `;
        });
    }

    function CALCULAR_TUDO() {
        let SOMA_BASE = LISTA_PRODUTOS.reduce((acc, item) => acc + item.custo, 0);
        
        const IMP = parseFloat(document.getElementById('TAXA_IMP').value) / 100;
        const MKT = parseFloat(document.getElementById('TAXA_MKT').value) / 100;
        const EMB = parseFloat(document.getElementById('VAL_EMB').value) || 0;
        const FRETE = parseFloat(document.getElementById('VAL_FRETE').value) || 0;
        const MARGEM = parseFloat(document.getElementById('TAXA_MARGEM').value) / 100;

        // CÁLCULO LOGÍSTICO CB2K
        let SUBTOTAL = SOMA_BASE + EMB + FRETE;
        let IMPOSTOS = SUBTOTAL * (IMP + MKT);
        let PRECO_COM_LUCRO = (SUBTOTAL + IMPOSTOS) * (1 + MARGEM);

        document.getElementById('VALOR_FINAL').innerText = "R$ " + PRECO_COM_LUCRO.toFixed(2);
    }

    function REMOVER(index) {
        LISTA_PRODUTOS.splice(index, 1);
        ATUALIZAR_TABELA();
        CALCULAR_TUDO();
    }
</script>

